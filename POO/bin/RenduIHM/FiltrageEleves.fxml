<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 20; -fx-border-radius: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FiltrageElevesController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label text="Filtrage des Étudiants">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label text="Cette page vous permet de supprimer les étudiants qui ne respectent pas les critères.">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="supprimerElevesIncorrectsButton" mnemonicParsing="false" onAction="#handleSupprimerElevesIncorrectsButton" prefHeight="50.0" prefWidth="300.0" text="Supprimer les Étudiants incorrects" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="retourButton" mnemonicParsing="false" onAction="#handleRetourButton" prefHeight="50.0" prefWidth="150.0" text="Retour" />
            <Button fx:id="suivantButton" mnemonicParsing="false" onAction="#handleSuivantButton" prefHeight="50.0" prefWidth="150.0" text="Suivant" />
         </children>
      </HBox>
   </children>
</VBox> 