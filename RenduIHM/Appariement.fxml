<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 20; -fx-border-radius: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AppariementController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            
            <Label text="Appariement">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="50.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Pays Visiteur :">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="paysVisiteurComboBox" prefWidth="150.0" promptText="Choisir du pays" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Pays Hôte :">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="paysHoteComboBox" prefWidth="150.0" promptText="Choisir du pays" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox spacing="15.0">
         <children>
            <Label text="Critères :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox spacing="5.0">
               <children>
                  <Label text="Hobbies :">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="hobbiesSlider" prefWidth="300.0" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Age">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="ageSlider" prefWidth="300.0" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Genre">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="genreSlider" prefWidth="300.0" />
               </children>
            </VBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleRetourButton" text="Retour" />
            <Button mnemonicParsing="false" onAction="#handleAppariementManuelButton" text="Appariement manuel" />
            <Button mnemonicParsing="false" onAction="#handleAppariementAutomatiqueButton" text="Appariement automatique" />
         </children>
      </HBox>
   </children>
</VBox> 