<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 20; -fx-border-radius: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VisualisationController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label text="Visualisation">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label text="Choisissez ce que vous souhaitez visualiser :">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="voirHotesButton" mnemonicParsing="false" onAction="#handleVoirHotesButton" prefHeight="50.0" prefWidth="300.0" text="Voir les Hôtes" />
      <Button fx:id="voirVisiteursButton" mnemonicParsing="false" onAction="#handleVoirVisiteursButton" prefHeight="50.0" prefWidth="300.0" text="Voir les Visiteurs" />
      <Button fx:id="voirAppariementsButton" mnemonicParsing="false" onAction="#handleVoirAppariementsButton" prefHeight="50.0" prefWidth="300.0" text="Voir les Appariements" />
      <Button fx:id="appariementButton" mnemonicParsing="false" onAction="#handleAppariementButton" prefHeight="50.0" prefWidth="300.0" text="Gérer les Appariements" />
      <Button fx:id="saveExportButton" mnemonicParsing="false" onAction="#handleSaveExportButton" prefHeight="50.0" prefWidth="300.0" text="Sauvegarder/Exporter" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="retourButton" mnemonicParsing="false" onAction="#handleRetourButton" prefHeight="50.0" prefWidth="150.0" text="Retour" />
         </children>
      </HBox>
   </children>
</VBox> 