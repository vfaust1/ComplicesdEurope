<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 20; -fx-border-radius: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HistoriqueController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/images/Gemini_Generated_Image_v0daoxv0daoxv0da(1).jpeg" />
               </image>
            </ImageView>
            <Label text="Historique">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <TableView fx:id="historiqueTable" prefHeight="300.0" prefWidth="720.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10;">
         <columns>
            <TableColumn fx:id="paysHoteColumn" prefWidth="240.0" text="Pays hôte" />
            <TableColumn fx:id="paysVisiteurColumn" prefWidth="240.0" text="Pays visiteur" />
            <TableColumn fx:id="anneeColumn" prefWidth="240.0" text="Année" />
         </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <ComboBox fx:id="fileComboBox" prefWidth="300.0" promptText="Choisir un fichier historique" />
            <Button mnemonicParsing="false" onAction="#handleChargerFichierButton" text="Charger le fichier" />
         </children>
      </HBox>
      <TextArea fx:id="fileContentArea" prefHeight="120.0" prefWidth="700.0" editable="false" wrapText="true" />
      <Button mnemonicParsing="false" onAction="#handleRetourButton" text="Retour" />
   </children>
</VBox> 